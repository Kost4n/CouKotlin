<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment">


    <Button
            android:text="Поставить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_view_alarm"
            style="@style/Widget.AppCompat.Button.Small"/>
    <TextView
            android:text="Будильники:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000"
            android:textSize="20sp" android:layout_marginTop="10dp" android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_alarm" android:layout_marginStart="10dp"
            android:id="@+id/view_morning_alarm" android:text="Утренний:" android:textColor="#000000"
            android:textSize="16dp"/>
    <TextView
            android:text="Вечерний:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_evening_alarm"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/view_morning_alarm"
            app:layout_constraintStart_toStartOf="parent" android:textColor="#000000" android:textSize="16dp"
            android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_morning_time_alarm"
            app:layout_constraintStart_toEndOf="@+id/view_morning_alarm" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_alarm" android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:freezesText="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_evening_time_alarm"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/view_morning_time_alarm"
            app:layout_constraintStart_toEndOf="@+id/view_evening_alarm" android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:text="."
            android:freezesText="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>