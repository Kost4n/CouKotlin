<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/DATE"
            android:visibility="invisible"/>
    <TextView
            android:id="@+id/UPPRES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="up_pres"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/UPPRES_text"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/DWPRES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dw_pres"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/UPPRES"
            app:layout_constraintTop_toBottomOf="@+id/DWPRES_text"
            android:layout_marginStart="40dp"/>
    <TextView
            android:id="@+id/PULS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="puls"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/DWPRES"
            app:layout_constraintTop_toBottomOf="@+id/PULS_text"
            android:layout_marginStart="40dp"/>
    <TextView
            android:id="@+id/UPPRES_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="С.А.Д.:"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/DATE"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/DWPRES_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Д.А.Д.:"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/UPPRES"
            app:layout_constraintTop_toBottomOf="@+id/DATE"
            android:layout_marginStart="40dp"/>
    <TextView
            android:id="@+id/PULS_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пульс:"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/DWPRES"
            app:layout_constraintTop_toBottomOf="@+id/DATE"
            android:layout_marginStart="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>